@model CitySearchModel

@{
    ViewData["Title"] = "Search";
}

<h2>Search</h2>

<form asp-action="results" asp-controller="home" method="get">

    <label asp-for="CountryCode"></label>
    <select asp-for="CountryCode" asp-items="Model.Countries"></select>

    <label asp-for="District"></label>
    <input asp-for="District" />

    <input type="submit" value="Submit" />
</form>